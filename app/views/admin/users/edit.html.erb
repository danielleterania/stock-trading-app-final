<h1>Edit User</h1>
<%= form_with model: @user, url: admin_user_path(@user), method: :put do |form| %>
  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, readonly: true %> <!-- Make email read-only -->
  </div>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username %> <!-- Make username editable -->
  </div>

  <div class="actions">
    <%= form.submit 'Update' %>
  </div>
<% end %>
<%= link_to 'Back', admin_users_path %>

<!-- app/views/admin/users/index.html.erb -->
<h1>All Users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Username</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.username %></td>
        <td><%= user.status %></td>
        <td>
          <%= link_to 'Show', admin_user_path(user) %>
          <%= link_to 'Edit', edit_admin_user_path(user) %>
          <% if user.status == 'pending' %>
            <%= button_to 'Approve', approve_admin_user_path(user), method: :patch, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
